@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("FireBase", "FireBaseLogin", "Login", routeValues: null, htmlAttributes: new { id = "FireBaseLink" })</li>
        <li>@Html.ActionLink("Google", "GoogleLogin", "Login", routeValues: null, htmlAttributes: new { id = "GoogleLogin" })</li>
        <li>@Html.ActionLink("Facebook", "FacebookLogin", "Login", routeValues: null, htmlAttributes: new { id = "FacebookLogin" })</li>
    </ul>
}
