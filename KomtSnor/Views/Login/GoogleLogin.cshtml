@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://apis.google.com/js/platform.js" async defer></script>
<meta name="google-signin-client_id" content="828730293498-8bbbg3ikots5q21uji4m5fl4pe9su474.apps.googleusercontent.com">
<div>GOOGLE LOGIN:</div><br />
<div id="SignButtons">
    <div id="g-LoginB" class="g-signin2" data-onsuccess="onSignIn"></div>
    
</div>
<script>
    function onSignIn(googleUser) {
        //examples for retrieving the user info
        var profile = googleUser.getBasicProfile();
        console.log('ID: ' + profile.getId()); // Do not send to your backend!!! Use an ID token instead. If you want to send it to the backend then: "var id_token = googleUser.getAuthResponse().id_token";
        console.log('Name: ' + profile.getName());
        console.log('Image URL: ' + profile.getImageUrl());
        console.log('Email: ' + profile.getEmail());
        
        var logout = $('<div id="g-LogoutB"><a href="#" onclick="signOut();">Sign out</a></div>');
        if (!$("#g-LogoutB").length) {
            logout.appendTo($("#SignButtons"));
        }
    }
    
    function signOut() {
        var auth2 = gapi.auth2.getAuthInstance();
        auth2.signOut().then(function () {
            console.log('User signed out.');
        });
        $("#g-LogoutB").remove();
    }
</script>

